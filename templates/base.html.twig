<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=EB+Garamond&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %} {% endblock %}
        {% block javascripts %} {% endblock %}{{ encore_entry_script_tags('app') }}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
        {#
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
#}
    </head>
    <body class="container-fluid">
        <header>
            <div class="row">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <button
                                class="navbar-toggler"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent"
                                aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav justify-content-around" style="font-family: 'Garamond', serif" >
                                <li class="nav-item">
                                    <a class="nav-link px-5" aria-current="page" href="/">BIENVENUE</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-5" aria-current="page" href="/reception">ACCES</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-5" aria-current="page" href="/presence">PRESENCE</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-5" aria-current="page" href="/sondage">SONDAGE</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center mt-4 bg-primary text-white">
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
        <footer>
            <div class="row bg-dark">
                <div>
                    <p class="mt-3">Ngoc My et GaÃ«l</p>
                    <p>23 avril 2022</p>
                </div>
            </div>
        </footer>
    </body>
</html>
