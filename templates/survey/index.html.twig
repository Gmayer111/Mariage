                        </svg></p>
                    <p class="text-center mt-1 fs-4"><i>Join the playlist !</i><i class="bi bi-music-note-beamed"></i></p>
                </div>
            </div>
            <div class="flo-col col-3">
                <picture class="d-none d-md-block">
                    <img class="floral-img flo-img-right" src="{{ asset('Images/floral.png') }}" alt="Image transparente">
                </picture>
            </div>
        </div>
    </section>
    <section>
        <div class="container mb-4">

            {{ form_start(form)}}
            <div class="form-control d-flex flex-column justify-content-center align-items-center survey">
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname, {'attr': {'value': ''}})  }}
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname, {'attr': {'value': ''}}) }}
                {{ form_label(form.artist) }}
                {{ form_widget(form.artist, {'attr': {'value': ''}})  }}
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {'value': ''}})  }}
                <div class="mt-2 text-center">
                    {{ form_label(form.comment) }}
                    <div class="mt-2">
                        {{ form_widget(form.comment, {'attr': {'value': ''}})  }}
                    </div>
                </div>
                <input type="submit" id="conf" value="Confirmer" class="btn btn-primary mt-3">
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}